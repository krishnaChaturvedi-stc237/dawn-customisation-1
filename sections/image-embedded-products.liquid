{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'section-image-embedded-products.css' | asset_url | stylesheet_tag }}

<script src="{{ 'section-image-embedded-products.js' | asset_url }}" defer="defer"></script>
{{ 'card-product-custom.css' | asset_url | stylesheet_tag }}
<script
  src="{{ 'card-product-custom.js' | asset_url }}"
  defer
></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign slide_count = 0
  for block in section.blocks
    if block.type == 'slide'
      assign slide_count = slide_count | plus: 1
    endif
  endfor

  assign show_slider_controls = false
  if slide_count > 1
    assign show_slider_controls = true
  endif
-%}

<div class="image-embedded-products color-{{ section.settings.color_scheme }} gradient" data-image-embedded-products>
  <div class="{% unless section.settings.full_width %}page-width{% endunless %} section-{{ section.id }}-padding isolate">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
      </div>
    {%- endunless -%}
    {% comment %} Image Slider Web component {% endcomment %}
    {%- if slide_count == 0 -%}
      <div class="rte">
        <p>Add one or more "Image" blocks to configure hotspots.</p>
      </div>
    {%- else -%}
      <slider-component class="slider-component-full-width">
        <ul
          id="Slider-{{ section.id }}"
          class="image-embedded-products__slides grid grid--1-col slider slider--everywhere"
          role="list"
          aria-label="{{ 'general.slider.name' | t }}"
        >
          {%- assign skip_card_product_styles = false -%}

          {%- for block in section.blocks -%}
            {%- if block.type != 'slide' -%}
              {%- continue -%}
            {%- endif -%}

            {%- assign spots_count = block.settings.spots_count | plus: 0 -%}

            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="image-embedded-products__slide grid__item slider__slide"
              {{ block.shopify_attributes }}
              data-iep-slide
            >
              <div
                class="image-embedded-products__media media media--transparent"
                {% if block.settings.image != blank and block.settings.image.aspect_ratio %}
                  style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;"
                {% endif %}
              >
                {% comment %} Image Listing {% endcomment %}
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 3000
                    | image_tag:
                      widths: '375, 550, 750, 1100, 1500, 2000, 3000',
                      sizes: '100vw',
                      class: 'image-embedded-products__image'
                  }}
                {%- else -%}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
                {% comment %} All Hotspot buttons {% endcomment %}
                <div class="image-embedded-products__hotspots">
                  {%- for i in (1..5) -%}
                    {%- if spots_count < i -%}
                      {%- continue -%}
                    {%- endif -%}

                    {%- assign product_key = 'spot_' | append: i | append: '_product' -%}
                    {%- assign x_key = 'spot_' | append: i | append: '_x' -%}
                    {%- assign y_key = 'spot_' | append: i | append: '_y' -%}

                    {%- assign linked_product = block.settings[product_key] -%}
                    {%- if linked_product == blank -%}
                      {%- continue -%}
                    {%- endif -%}

                    {%- assign card_id = 'IEP-' | append: section.id | append: '-' | append: block.id | append: '-' | append: i -%}

                    <button
                      type="button"
                      class="image-embedded-products__hotspot"
                      style="left: {{ block.settings[x_key] }}%; top: {{ block.settings[y_key] }}%;"
                      aria-controls="{{ card_id }}"
                      aria-expanded="false"
                      data-hotspot-button
                    >
                      <span class="visually-hidden">{{ linked_product.title }}</span>
                    </button>
                  {%- endfor -%}
                </div>

                {% comment %} Product Card Div {% endcomment %}
                <div class="image-embedded-products__product-panel">
                  {%- for i in (1..5) -%}
                    {%- if spots_count < i -%}
                      {%- continue -%}
                    {%- endif -%}

                    {%- assign product_key = 'spot_' | append: i | append: '_product' -%}
                    {%- assign linked_product = block.settings[product_key] -%}
                    {%- if linked_product == blank -%}
                      {%- continue -%}
                    {%- endif -%}

                    {%- assign card_id = 'IEP-' | append: section.id | append: '-' | append: block.id | append: '-' | append: i -%}
                    <div
                      id="{{ card_id }}"
                      class="image-embedded-products__product-card"
                      data-hotspot-product
                      hidden
                    >
                      <button
                        type="button"
                        class="button button--tertiary image-embedded-products__close"
                        data-hotspot-close
                        aria-label="{{ 'accessibility.close' | t }}"
                      >
                        <span class="svg-wrapper">{{ 'icon-close.svg' | inline_asset_content }}</span>
                      </button>

                      {% comment %} {% render 'card-product',
                        card_product: linked_product,
                        media_aspect_ratio: 'square',
                        lazy_load: true,
                        show_secondary_image: false,
                        show_vendor: false,
                        show_rating: false,
                        skip_styles: skip_card_product_styles,
                        section_id: section.id,
                        horizontal_class: true
                        quick_add: 'standard'
                      %} {% endcomment %}

                      {% render 'card-product-custom', product: linked_product %}

                      {%- assign skip_card_product_styles = true -%}
                    </div>
                  {%- endfor -%}
                </div>
              </div>
            </li>
          {%- endfor -%}
        </ul>
        {% comment %} Slider Left Right Buttons {% endcomment %}
        {%- if show_slider_controls -%}
          <div class="slider-buttons">
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'general.slider.previous_slide' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
            </button>
            <div class="slider-counter caption">
              <span class="slider-counter--current">1</span>
              <span aria-hidden="true"> / </span>
              <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
              <span class="slider-counter--total">{{ slide_count }}</span>
            </div>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'general.slider.next_slide' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
            </button>
          </div>
        {%- endif -%}
      </slider-component>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Image embedded products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Shop the look",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "Full width"
    },
    {
      "type": "header",
      "content": "Image height"
    },
    {
      "type": "range",
      "id": "image_height_mobile",
      "min": 240,
      "max": 700,
      "step": 10,
      "unit": "px",
      "label": "Image height (mobile)",
      "default": 420
    },
    {
      "type": "range",
      "id": "image_height_desktop",
      "min": 300,
      "max": 900,
      "step": 10,
      "unit": "px",
      "label": "Image height (desktop)",
      "default": 560
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background image"
        },
        {
          "type": "range",
          "id": "spots_count",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 2,
          "label": "Number of product spots"
        },
        {
          "type": "paragraph",
          "content": "Hotspot X/Y are stored as percentages so they stay responsive." 
        },

        { "type": "header", "content": "Spot 1" },
        { "type": "range", "id": "spot_1_x", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 50, "label": "X position (%)" },
        { "type": "range", "id": "spot_1_y", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 50, "label": "Y position (%)" },
        { "type": "product", "id": "spot_1_product", "label": "Linked product" },

        { "type": "header", "content": "Spot 2" },
        { "type": "range", "id": "spot_2_x", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 60, "label": "X position (%)" },
        { "type": "range", "id": "spot_2_y", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 60, "label": "Y position (%)" },
        { "type": "product", "id": "spot_2_product", "label": "Linked product" },

        { "type": "header", "content": "Spot 3" },
        { "type": "range", "id": "spot_3_x", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 40, "label": "X position (%)" },
        { "type": "range", "id": "spot_3_y", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 40, "label": "Y position (%)" },
        { "type": "product", "id": "spot_3_product", "label": "Linked product" },

        { "type": "header", "content": "Spot 4" },
        { "type": "range", "id": "spot_4_x", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 70, "label": "X position (%)" },
        { "type": "range", "id": "spot_4_y", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 30, "label": "Y position (%)" },
        { "type": "product", "id": "spot_4_product", "label": "Linked product" },

        { "type": "header", "content": "Spot 5" },
        { "type": "range", "id": "spot_5_x", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 30, "label": "X position (%)" },
        { "type": "range", "id": "spot_5_y", "min": 0, "max": 100, "step": 1, "unit": "%", "default": 70, "label": "Y position (%)" },
        { "type": "product", "id": "spot_5_product", "label": "Linked product" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image SpotOn",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
