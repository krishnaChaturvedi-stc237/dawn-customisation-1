<script src="{{ 'counter-custom-element.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .product-properties-{{ section.id }} {
    border-radius: 12px;
    background-color: {{ section.settings.background_color | default: '#FFE2D233' }};
  }

  .product-properties-{{ section.id }}__inner {
    text-align: center;
  }

  .product-properties-{{ section.id }}__heading {
    margin: 0 0 2.4rem;
  }

  .product-properties-{{ section.id }}__scroll {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x mandatory;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  .product-properties-{{ section.id }}__scroll::-webkit-scrollbar {
    height: 0; /* hide horizontal scrollbar for WebKit */
    display: none;
  }

  .product-properties-{{ section.id }}__list {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: center;
    gap: 3.5rem;
    padding: 1.5rem 0 0.5rem;
    margin: 0;
    list-style: none;
    min-width: 100%;
  }

  .product-properties-{{ section.id }}__item {
    flex: 0 0 auto;
    text-align: center;
    scroll-snap-align: center;
  }

  .product-properties-{{ section.id }}__icon {
    margin-bottom: 1rem;
  }

  .product-properties-{{ section.id }}__label {
    margin: 0;
    font-size: 1.4rem;
  }
  counter-box {
    --counter-bg: #f9fafb;
    --counter-border: #d1d5db;
  }

  @media screen and (min-width: 990px) {
    .product-properties-{{ section.id }}__list {
      justify-content: space-between;
    }
  }

  /* Small / tablet screens: enable horizontal scrolling (hidden scrollbar) and left-align items */
  @media screen and (max-width: 989px) {
    .product-properties-{{ section.id }}__list {
      min-width: auto; /* allow list to size to content */
      justify-content: flex-start;
      gap: 1.5rem;
      padding: 1rem 1rem 0.5rem;
    }

    .product-properties-{{ section.id }}__item {
      scroll-snap-align: start;
    }
  }
{%- endstyle -%}

<div class="product-properties-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="product-properties-{{ section.id }}__inner">
      {%- if section.settings.heading != blank -%}
        <h2 class="product-properties-{{ section.id }}__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="product-properties-{{ section.id }}__scroll" role="region" aria-label="{{ section.settings.heading | escape }}">
          <ul class="product-properties-{{ section.id }}__list" role="list">
            {%- for block in section.blocks -%}
              <li class="product-properties-{{ section.id }}__item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="product-properties-{{ section.id }}__icon">
                    {{
                      block.settings.icon
                      | image_url: width: 120
                      | image_tag:
                        widths: '60,90,120',
                        loading: 'lazy'
                    }}
                  </div>
                {%- endif -%}
                {%- if block.settings.label != blank -%}
                  <p class="product-properties-{{ section.id }}__label">
                    {{ block.settings.label }}
                  </p>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      {%- endif -%}
      {% comment %} <counter-box id="counter-1" start="5" step="2" variant="compact">
        <h3 slot="title" >Counter1</h3>
        <p slot="description" >Counter will start from 5</p>
      </counter-box>
      <counter-box start="5" step="2" variant="compact">
        <h3 slot="title" >Counter2</h3>
        <p slot="description" >Counter will start from 5</p>
      </counter-box>
      <counter-box start="5" step="2" variant="compact">
        <h3 slot="title" >Counter3</h3>
        <p slot="description" >Counter will start from 5</p>
      </counter-box>
      <h3>Hello</h3> {% endcomment %}
    </div>
  </div>
</div>

<script>
  {
    document.querySelector('#counter-1').addEventListener('count-change',(e)=>{
      console.log('Counter is changing',e.detail.value)
    })
  }
</script>
{% schema %}
{
  "name": "Product properties",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Make a good choice."
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        { "value": "h3", "label": "Small" },
        { "value": "h2", "label": "Medium" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFE2D233"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "property",
      "name": "Property",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "inline_richtext",
          "id": "label",
          "label": "Label",
          "default": "Recyclable Packaging"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product properties",
    }
  ]
}
{% endschema %}
