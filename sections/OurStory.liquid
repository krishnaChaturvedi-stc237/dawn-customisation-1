  .our-story-{{ section.id }}__bottom-item {
    text-align: center;
  }

  .our-story-{{ section.id }}__bottom-icon {
    margin-bottom: 0.8rem;
  }

  .our-story-{{ section.id }}__bottom-title {
    margin: 0 0 0.4rem;
    font-weight: 600;
  }

  .our-story-{{ section.id }}__bottom-text {
    margin: 0;
    font-size: 1.3rem;
