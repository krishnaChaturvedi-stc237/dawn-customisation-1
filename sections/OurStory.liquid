        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Describe one of your key brand pillars, such as quality, sustainability or innovation."
        }
      ]
    },
    {
      "type": "bottom_icon",
      "name": "Bottom icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Discreet Packaging"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Short reassuring message about this benefit."
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Our story",
      "blocks": [
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "highlight" },
        { "type": "bottom_icon" },
        { "type": "bottom_icon" },
        { "type": "bottom_icon" }
      ]
    }
  ]
}
