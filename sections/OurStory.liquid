    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .our-story-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 3.2rem;
  }

  .our-story-{{ section.id }}__top {
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1.1fr);
    gap: 3.2rem;
    align-items: center;
  }

  .our-story-{{ section.id }}__video {
    position: relative;
  }

  .our-story-{{ section.id }}__video .video-section__media {
    max-height: {{ section.settings.video_max_height | default: 460 }}px;
    border-radius: 16px;
    overflow: hidden;
  }

  .our-story-{{ section.id }}__content {
    display: flex;
    flex-direction: column;
    gap: 1.8rem;
  }

  .our-story-{{ section.id }}__heading {
    margin: 0 0 1.2rem;
  }

  .our-story-{{ section.id }}__text {
    margin: 0;
    line-height: 1.6;
  }

  .our-story-{{ section.id }}__button-wrapper {
    margin-top: 0.8rem;
  }

  .our-story-{{ section.id }}__slider-wrapper {
    margin-top: 0.8rem;
  }

  .our-story-{{ section.id }}__slider {
    position: relative;
    padding: 0 3.6rem; /* space for arrows */
  }

  .our-story-{{ section.id }}__slider-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 1.6rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
  }

  .our-story-{{ section.id }}__slider-list::-webkit-scrollbar {
    display: none;
  }

  .our-story-{{ section.id }}__slide {
    flex: 0 0 100%;
    max-width: 220px;
    margin-inline: auto;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    padding: 1.2rem 1.5rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    row-gap: 0.5rem;
    scroll-snap-align: center;
  }

  .our-story-{{ section.id }}__slide-icon {
    flex: 0 0 auto;
    margin-bottom: 0.4rem;
  }

  .our-story-{{ section.id }}__slide-title {
    margin: 0 0 0.4rem;
    font-weight: 600;
  }

  .our-story-{{ section.id }}__slide-text {
    margin: 0;
    font-size: 1.3rem;
    line-height: 1.5;
  }

