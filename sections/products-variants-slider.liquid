{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'section-products-variants-slider.css' | asset_url | stylesheet_tag }}

<script src="{{ 'storefront-api.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'section-products-variants-slider.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} isolate gradient">
  <div
    class="page-width section-{{ section.id }}-padding"
    style="--pvs-products-max-height: {{ section.settings.products_scroll_height_desktop }}vh; --pvs-products-max-height-mobile: {{ section.settings.products_scroll_height_mobile }}vh;"
  >
    <products-variants-slider
      data-section-id="{{ section.id }}"
      data-products-first="10"
      data-variants-first="6"
      data-endpoint="https://{{ shop.permanent_domain }}/api/2025-10/graphql.json"
    >
      {%- if section.settings.title != blank -%}
        <div class="title-wrapper title-wrapper--no-top-margin">
          <h2 class="title inline-richtext {{ section.settings.heading_size }}">
            {{ section.settings.title }}
          </h2>
        </div>
      {%- endif -%}

      <div class="pvs-status" data-pvs-status>Loading…</div>
      <div class="pvs-products" data-pvs-products></div>

      {%- comment -%}
        Make the caret icon available to JS-rendered slider buttons (keeps look consistent with Dawn).
        Keep it scoped to this section to avoid duplicate global IDs.
      {%- endcomment -%}
      <template data-pvs-icon-caret>{{- 'icon-caret.svg' | inline_asset_content -}}</template>
    </products-variants-slider>
  </div>
</div>

{% schema %}
{
  "name": "Products → Variant slider",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Products",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Large" }
      ],
      "default": "h2",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "products_scroll_height_desktop",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Products list height (desktop)",
      "default": 70
    },
    {
      "type": "range",
      "id": "products_scroll_height_mobile",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Products list height (mobile)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Products → Variant slider (Storefront API)"
    }
  ]
}
{% endschema %}
